<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Username - @ViewBag.Title - ASP.NET Uygulamam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar-fixed-top">
        <div class="container">
            <nav class="navbar navbar-default example5">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar5">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="~/SaatveSaat/Index">
                            <img style="max-width:100px;"
                                 src="/images/logo.png">Saat&Saat
                        </a>
                    </div>
                    <div id="navbar5" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @*<li class="active"><a href="index">Ana Sayfa</a></li>
                                <li><a href="Markalar">Markalar</a></li>
                                <li><a href="Modeller">Modeller</a></li>*@
                            <li>@Html.ActionLink("Ana Sayfası", "Index", "SaatveSaat")</li>
                            <li>@Html.ActionLink("Markalar", "Markalar", "SaatveSaat")</li>
                            <li>@Html.ActionLink("Kategoriler", "Kategoriler/", "SaatveSaat")</li>
                            <li>@Html.ActionLink("Urunler", "Urunler/", "SaatveSaat")</li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />

        <div class="row">
            <footer>
                <center>&copy; @DateTime.Now.Year - Saat&Saat</center>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>
