@using SaatveSaatWeb.Models;
@model List<Brand>
@{
    ViewBag.Title = "Markalar";
    var models = TempData["BrandList"] as List<Brand>;
}

@*<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>*@
<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 ThumbSaatveSaat">
            <div class="thumbnail">
                <a href="/saatvesaat/kategoriler/@item.BrandName">
                    <img src="/images/@Html.DisplayFor(modeItem => item.BrandImage)">
                    <div class="caption1SaatveSaat">
                        <p>@Html.DisplayFor(modeItem => item.BrandName).ToString().ToUpper()</p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
   





