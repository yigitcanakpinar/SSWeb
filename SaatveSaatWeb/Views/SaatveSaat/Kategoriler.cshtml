@using SaatveSaatWeb.Models;

@model List<Category>
@{
    ViewBag.Title = "Kategoriler";
}


<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 ThumbSaatveSaat">
            <div class="thumbnail">
                <a href="@Url.Action("Urunler", "SaatveSaat", new { bname = @TempData["marka"],cname = @Html.DisplayFor(modeItem => item.CategoryName).ToString().ToUpper() }, null)">
                    <img src="/images/logo.png" style="width:100%">
                    <div class="caption1SaatveSaat">
                        <p>@Html.DisplayFor(modeItem => item.CategoryName).ToString().ToUpper()</p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

